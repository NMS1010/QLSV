@model IEnumerable<QLSV.Models.DiemHocSinh>

@{
    ViewData["Title"] = "Diem";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="table-responsive">
        <table class="table table-hover e-commerce-table">
            <thead>
                <tr>
                    <th style="padding: 10px; border: 1px solid #000;">ID Hoc Sinh</th>
                    <th style="padding: 10px; border: 1px solid #000;">Tên khoá học</th>
                    <th style="padding: 10px; border: 1px solid #000;">Tên giáo viên</th>
                    <th style="padding: 10px; border: 1px solid #000;">Điểm</th>
                    <th style="padding: 10px; border: 1px solid #000;">Nhận xét</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var diem in Model)
                    {
                        <tr>
                            <td style="padding: 10px; border: 1px solid #000;">@diem.IdHocSinh</td>
                            <td style="padding: 10px; border: 1px solid #000;">@diem?.KhoaHoc.course_name</td>
                            <td style="padding: 10px; border: 1px solid #000;">@diem?.KhoaHoc.GiaoVien?.full_name</td>
                            <td style="padding: 10px; border: 1px solid #000;">@diem.SoDiem</td>
                            <td style="padding: 10px; border: 1px solid #000;">@diem.NhanXet</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</body>
</html>
@section Styles {
    <link href="~/Adminassets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
}
@section Scripts {
    <script src="~/Adminassets/js/pages/e-commerce-order-list.js"></script>
    <script src="~/Adminassets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Adminassets/vendors/datatables/dataTables.bootstrap.min.js"></script>
}

